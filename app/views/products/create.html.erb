<div class="page-header">
	<h1>Create a new product</h1>	
</div>

<%= form_for Product.new, html: {class: "form"}, url: {action: "store"} do |f| %>

	<div class="row">
		<div class="form-group col-md-6">
			<label>Product name:</label>
			<%= f.text_field :name, class: "form-control"%>
		</div>
	</div>
	
	<div class="row">
		<div class="form-group col-md-3">
			<label>Price:</label>
			<input class="form-control" name="product[price]" type="text" />
		</div>
		<div class="form-group col-md-3">
			<label>Amount:</label>
			<input class="form-control" name="product[amount]" type="text" />
		</div>
	</div>

	<div class="row">
		<div class="form-group col-md-6">
			<label>Description:</label>
			<textarea class="form-control" name="description" rows="4"></textarea>
		</div>
	</div>

	<div class="row">
		<div class="form-group col-md-6">
			<button class="btn btn-success btn-lg pull-right">Save</button>
		</div>
	</div>
<% end %>